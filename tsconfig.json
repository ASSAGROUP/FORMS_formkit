{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "lib": ["dom"],
    "allowJs": false,
    "strict": true,
    "moduleResolution": "node",
    "declaration": false,
    "baseUrl": ".",
    "outDir": "dist",
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "paths": {
      "@components": [
        "packages/vue/src/components/*"
      ]
    }
  }
}
