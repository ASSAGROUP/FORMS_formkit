{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "lib": ["dom"],
    "allowJs": false,
    "strict": true,
    "moduleResolution": "node",
    "declaration": true,
    "baseUrl": ".",
    "outDir": "dist",
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
  },
  "include": [
    "packages/*/src",
    "packages/*/__tests__"
  ]
}
